@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -  @Configuration["name"]</title>

    <link rel="stylesheet" href="~/lib/vendor.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/vendor.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
</head>
<body>
    <div class="container">
   
      
        <nav class="nav navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                <a class="navbar-brand" asp-area=""  
                   asp-controller="Home" asp-action="Index"> @Configuration["name"] </a>
                </div>
                    <ul class="  nav navbar-nav" role="navigation">

                    <li>

                        <a asp-controller="Home"
                           asp-action="Index">Home</a>

                    </li>
                    <li> 
                        <a asp-controller="Home"
                           asp-action="About">About</a> 
                    </li>
                        <li> 
                            <a asp-controller="Home"
                               asp-action="Contact">
                                Contact
                                <span class="caret"></span>
                            </a>

                        </li>
                        <li> 
                        <a asp-controller="Home"
                           asp-action="boot">
                          well组件
                                  
                        </a>
                        </li>
                </ul> 
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control"/>
                    </div>
                    <button type="submit">搜索</button>
                </form>
                <ul id="dropdownMenuButton" class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle"  data-toggle="dropdown">点我<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>

                                <a asp-controller="Home"
                                   asp-action="Index">Home</a>

                            </li>
                            <li> 
                                <a asp-controller="Home"
                                   asp-action="About">About</a> 
                            </li>
                            <li> 
                                <a asp-controller="Home"
                                   asp-action="Contact">
                                    Contact
                                    <span class="caret"></span>
                                </a>

                            </li>
                            <li> 
                                <a asp-controller="Home"
                                   asp-action="boot">
                                    boot
                                  
                                </a>

                            </li>
                        </ul>
                    </li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </nav>

    </div>

    <div class="container">
        <ol id="mytab" class="breadcrumb  navbar-fixed-bottom" role="navigation">

            <li role="presentation">

                <a asp-controller="Home"
                   asp-action="Index">Home</a>

            </li>
            <li role="presentation">

                <a asp-controller="Home"
                   asp-action="About">About</a>

            </li>
            <li role="presentation">

                <a asp-controller="Home"
                   asp-action="Contact">
                    Contact
                    <span class="caret"></span>
                </a>

            </li>
        </ol>
        <script>
            $('#mytab').click(function (e) {
                e.preventDefault();
                $(this).tab("show");
            });
          
        </script>
     

        @RenderBody()

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year -  @Configuration["name"]</p>
        </footer>
    </div>
   

</body>
</html>
