@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -  @Configuration["name"]</title>

    <link rel="stylesheet" href="~/lib/vendor.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="container">

        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> @Configuration["name"] </a>


        <ul class="pagination" role="menu">

            <li>

                <a asp-controller="Home"
                   asp-action="Index">Home</a>

            </li>
            <li>

                <a asp-controller="Home"
                   asp-action="About">About</a>

            </li>
            <li>

                <a asp-controller="Home"
                   asp-action="Contact">Contact</a>

            </li>
        </ul>


        @await Html.PartialAsync("_LoginPartial")
    </div>


    <div class="container">

        @RenderBody()

        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year -  @Configuration["name"]</p>
        </footer>
    </div>
    <script src="~/lib/vendor.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>
